<div class="container">
    <section id="content">
        <div class="content_title">
            <h1>Welcome to registration page</h1>
        </div>
        <div class="content_reg-form">
            <form action="/register" method="post">
                <p>
                    <input type="text" name="login" class="input" placeholder="Input your login">
                </p>
                <p>
                    <input type="password" name="password" class="input" placeholder="Input your password">
                </p>
                <p>
                    <input type="submit" value="Registration" class="btn">
                </p>
            </form>
        </div>
        <div class="content_link">
            <a href="login" class="link">Have account?</a>
        </div>
    </section>
</div>