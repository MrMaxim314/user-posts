<div class="container">
    <section id="content">
        <div class="content_title">
            <h1>Please Log in</h1>
        </div>

        <div class="content_reg-form">
            <form action="/login" method="post">
                <p>
                    <input type="text" name="login"  class="input" placeholder="Input your login">
                </p>
                <p>
                    <input type="password" name="password" class="input" placeholder="Input your password">
                </p>
                <p>
                    <input type="submit" value="login" class="btn">
                </p>
            </form>
        </div>
        <div class="content_link">
            <a href="/register" class="link">Create account</a>
        </div>
    </section>
</div>